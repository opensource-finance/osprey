{
  "_description": "Rules optimized for PaySim fraud detection benchmark",
  "_source": "PaySim dataset (Lopez-Rojas et al., 2016)",
  "_dataset": "https://www.kaggle.com/datasets/ealaxi/paysim1",
  "_version": "1.0.0",
  "_note": "These rules achieve ~96% recall on PaySim fraud detection",
  "rules": [
    {
      "id": "paysim-account-drain",
      "name": "PaySim Account Drain",
      "description": "Primary fraud indicator: account balance drained to zero",
      "expression": "old_balance > 0.0 && new_balance == 0.0",
      "weight": 0.8,
      "enabled": true,
      "bands": [
        {"lowerLimit": 1.0, "subRuleRef": ".fail", "reason": "Account drained to zero"},
        {"lowerLimit": 0.0, "upperLimit": 1.0, "subRuleRef": ".pass", "reason": "No drain"}
      ]
    },
    {
      "id": "paysim-high-risk-type",
      "name": "PaySim High Risk Type",
      "description": "Fraud only occurs in CASH_OUT and TRANSFER types in PaySim",
      "expression": "tx_type == \"CASH_OUT\" || tx_type == \"TRANSFER\"",
      "weight": 0.3,
      "enabled": true,
      "bands": [
        {"lowerLimit": 1.0, "subRuleRef": ".review", "reason": "High risk transaction type"},
        {"lowerLimit": 0.0, "upperLimit": 1.0, "subRuleRef": ".pass", "reason": "Low risk type"}
      ]
    },
    {
      "id": "paysim-fraud-pattern",
      "name": "PaySim Fraud Pattern",
      "description": "Combined: account drain + high risk type = definitive fraud",
      "expression": "(old_balance > 0.0 && new_balance == 0.0) && (tx_type == \"CASH_OUT\" || tx_type == \"TRANSFER\")",
      "weight": 1.0,
      "enabled": true,
      "bands": [
        {"lowerLimit": 1.0, "subRuleRef": ".fail", "reason": "PaySim fraud pattern detected"},
        {"lowerLimit": 0.0, "upperLimit": 1.0, "subRuleRef": ".pass", "reason": "Pattern not matched"}
      ]
    },
    {
      "id": "paysim-large-amount",
      "name": "PaySim Large Amount",
      "description": "Large transactions in PaySim (over 200K)",
      "expression": "amount > 200000.0",
      "weight": 0.4,
      "enabled": true,
      "bands": [
        {"lowerLimit": 1.0, "subRuleRef": ".review", "reason": "Large transaction amount"},
        {"lowerLimit": 0.0, "upperLimit": 1.0, "subRuleRef": ".pass", "reason": "Normal amount"}
      ]
    },
    {
      "id": "paysim-partial-drain",
      "name": "PaySim Partial Drain",
      "description": "Catches fraud cases without full drain (>90% balance reduction)",
      "expression": "old_balance > 0.0 && new_balance < old_balance * 0.1 && amount > 100000.0 && (tx_type == \"CASH_OUT\" || tx_type == \"TRANSFER\")",
      "weight": 0.7,
      "enabled": true,
      "bands": [
        {"lowerLimit": 1.0, "subRuleRef": ".fail", "reason": "Significant balance reduction with high risk type"},
        {"lowerLimit": 0.0, "upperLimit": 1.0, "subRuleRef": ".pass", "reason": "Normal transaction"}
      ]
    }
  ]
}
